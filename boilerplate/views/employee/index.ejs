<!DOCTYPE html>
<html>
  <head>
    <title>Employee Database</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="datepicker.min.css">
  </head>
  <body>
    <div class="container">
        <h1>Employee List</h1>
        <% 
        var list = employees.find();
        if(list.length>0) { %>
        <table>
          <thead>
            <tr>
              <th>Id</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Hire Date</th>
              <th>Role</th>
              <th>Favorite Joke</th>
              <th>Favorite Quote</th>
  
            </tr>
          </thead>
          <tbody>
  
            <% for(var i=0; i<list.length;i++) { %>
              <tr>
                <td><%= list[i].identifier%></td>
                <td><%= list[i].firstName%></td>
                <td><%= list[i].lastName%></td>
                <td><%= list[i].hireDate%></td>
                <td><%= list[i].role%></td>
                <td><%= list[i].favoriteJoke%></td>
                <td><%= list[i].favoriteQuote%></td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <% } else { %>
          <div>No employees found.</div>
        <% } %>
        <input type="submit" value="Find All" />
        <h1>Create New Employee</h1>
        <form action="/employees/save" method="post">
          <table>
            <tbody>
              <tr>
                <td>First Name</td>
                <td><input type="text" name="firstName" /></td>
              </tr>
              <tr>
                <td>Last Name</td>
                <td><input type='text' name="lastName"></input></td>
              </tr>
              <tr>
                <td>Hire Date</td>
                <td><input  type="date" value="YYYY-MM-DD" id="hireDate"/></td>
              </tr>
              <tr>
                <td>Role</td>
                <td>
                    <select class="selectpicker" data-style="btn-info" name="selectpicker">
                        <optgroup label="Select Role">
                            <option name="lackey-option" value="0">LACKEY</option>
                            <option name="manager-option" value="1">MANAGER</option>
                            <option name="vp-option" value="2">VP</option>
                            <option name="ceo-option" value="3">CEO</option>
                        </optgroup>
                    </select>

                </td>
              </tr>
              <tr>
                <td colspan="2"><input type="submit" value="Save" /></td>
              </tr>
            </tbody>
          </table>
        </form>
       
        <h3><a href="/<%= employees.identifier%>">Find By Id</a></h3>
        <form action="/<%= employees.identifier%>" method="get">
          <input type='text' name="lastName"></input>  
          <button type="submit">Find By Id</button>
        </form>
        <h1>Update By Id </h1>
        <input  type="text"  id="updateById"/>
        <input type="submit" value="Update" />
        <h1>Delete By Id</h1>
        <input  type="text"  id="deleteById"/>
        <input type="submit" value="Delete" />

    </div>
    <script src="datepicker.min.js"></script> 
  </body>
</html>